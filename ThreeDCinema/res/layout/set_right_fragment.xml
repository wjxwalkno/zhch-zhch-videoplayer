<?xml version="1.0" encoding="utf-8"?>  
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
     android:layout_height="match_parent"
      android:orientation="vertical" >
  
 
 
     <CheckBox
  		 android:id="@+id/dec_soft"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/softdec"
         android:textColor="@android:color/white" />

      <CheckBox
  		 android:id="@+id/dec_hw"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/hwdec"
         android:textColor="@android:color/white"/>
      <RelativeLayout 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"         
          >
         <EditText 
             android:id="@+id/path_txt"
             android:layout_width="200dp"
             android:layout_height="35dp"
             android:layout_marginLeft="20dp"
             
             android:textColor="@android:color/white"
             android:textSize="15sp"
             android:editable="false"
             android:background="@null"
             
             />
          <ImageView 
              android:id="@+id/select_path"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/path_txt"
              android:src="@drawable/select_path"
              
              />
          
      </RelativeLayout>
 
 </LinearLayout>